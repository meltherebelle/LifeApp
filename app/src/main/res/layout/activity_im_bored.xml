<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_imbored"
    tools:context=".ImBored">

    <Button
        android:id="@+id/generateBtn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="221dp"
        android:background="@drawable/custom_button2"
        android:text="Generate"
        android:textColor="@color/light_blue_50"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtRandom"
        android:layout_width="340dp"
        android:layout_height="338dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:background="@drawable/ic_recommandation"
        android:gravity="center"
        android:text="Click on Generate to get busy"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:translationY="100dp" />


</RelativeLayout>