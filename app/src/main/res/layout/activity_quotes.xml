<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_getmotivated"
    tools:context=".Quotes">

    <Button
        android:id="@+id/NewQuote"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/custom_button2"
        android:text="@string/another_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RandomQuote" />

    <TextView
        android:id="@+id/RandomQuote"
        android:layout_width="282dp"
        android:layout_height="92dp"
        android:autoText="false"
        android:gravity="center"
        android:text="Random Quote Generator"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />
</androidx.constraintlayout.widget.ConstraintLayout>