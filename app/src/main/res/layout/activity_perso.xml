<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_perso"
    tools:context=".Perso">

    <Button
        android:id="@+id/Return1Btn"
        android:layout_width="110dp"
        android:layout_height="58dp"
        android:layout_marginStart="280dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/back_button"
        android:translationX="16dp"
        android:translationY="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ImBoredBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/custom_button"
        android:text="I'm Bored"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/RealHobbyBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@+id/MoodBtn"
        android:layout_marginStart="120dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/custom_button"
        android:text="Hobby"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/todolistBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_below="@+id/RealHobbyBtn"
        android:layout_marginStart="120dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/custom_button"
        android:text="Notes"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <Button
        android:id="@+id/MoodBtn"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/custom_button"
        android:text="Mood"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>